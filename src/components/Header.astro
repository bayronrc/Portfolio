---
const navItems = [
  {
    title: 'Experiencia',
    label: 'experiencia',
    url: '/#experiencia',
  },
  {
    title: 'Proyectos',
    label: 'proyectos',
    url: '/#proyectos',
  },
  {
    title: 'Sobre mi',
    label: 'sobre-mi',
    url: '/#sobre-mi',
  },
  {
    title: 'Contacto',
    label: 'contacto',
    url: '/#sobre-mi',
  },
];
---

<header
  class="h-14 flex justify-center items-center pt-2 sticky top-0 w-full xl:w-[1120px] mx-auto z-10 space-x-2"
>
  <nav
    class="w-full md:w-3/4 xl:w-1/2 h-full rounded-2xl md:px-6 px-3 py-1
    flex flex-row items-center justify-center dark:bg-white/20 backdrop-blur-md border border-white/20 shadow-lg"
  >
    {
      navItems.map((link) => (
        <a
          class="hover:bg-white/10 p-1 rounded-full px-2 sm:px-3  transition ease-in text-xl sm:text-base capitalize"
          aria-label={link.label}
          href={link.url}
        >
          {link.title}
        </a>
      ))
    }
  </nav>
</header>
